extends ../layout

block content
  h3 Games

  div(class="row")
    div(class="col-12")

      a(href="/admin/games/new", class="btn btn-primary mb-3") Create

      table(class="table table-striped table-bordered table-hover")
        tr
          th #
          th Date
          th Teams
          th Result
          th
          th
        each game, index in games
          tr
            td= index + 1
            td= game.date
            td= game.title
            td= game.scores
            td
              a(href=`/admin/games/${game.id}/edit`, class="btn btn-sm btn-dark") Edit
            td
              a(href=`/admin/games/${game.id}/delete`, class="btn btn-sm btn-danger") Delete
