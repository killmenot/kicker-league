extends ../layout

block content
  h1= title

  div(class="row")
    div(class="col-12")
      h2 Games

      a(href="/admin/games/new", class="btn btn-primary") Create

      hr

      table(class="table table-striped table-bordered table-hover")
        tr
          th
            | Date
          th
            | Teams
          th
            | Result
          th
            | &nbsp;
          th
            | &nbsp;
        each game in games
          tr
            td
              = game.date
            td
              = game.title
            td
              = game.scores
            td
              a(href=`/admin/games/${game.id}/edit`, class="btn btn-sm btn-dark") Edit
            td
              a(href=`/admin/games/${game.id}/delete`, class="btn btn-sm btn-danger") Delete
