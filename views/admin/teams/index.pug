extends ../layout

block content
  div(class="row")
    div(class="col-4")
      h3 Create team

      form(action="/admin/teams/create", method="post", class="well")
        div(class="form-group")
          label(for="name")
            | Team name
          input(type="text", name="name", class="form-control")
        div(class="form-group")
          label(for="location")
            | Location
          input(type="text", name="location", class="form-control")
        div(class="form-group")
          label(for="location")
            | Abbreviation
          input(type="text", name="abbreviation", class="form-control")
        input(type="submit" class="btn btn-primary")

    div(class="col-6")
      h3 Teams

      table(class="table table-striped table-bordered table-hover")
        tr
          th
            | Name
          th
            | Location
          th
            | Abbr
          th
            | &nbsp;
          th
            | &nbsp;
        each team in teams
          tr
            td
              = team.name
            td
              = team.abbreviation
            td
              = team.location
            td
              a(href=`/admin/teams/${team.id}/edit`, class="btn btn-sm btn-dark") Edit
            td
              a(href=`/admin/teams/${team.id}/delete`, class="btn btn-sm btn-danger") Delete
